# Configuración de la base de datos Oracle
# Copia este archivo a .env y configura tus valores

# Usuario de la base de datos
USER=tu_usuario_oracle

# Contraseña del usuario
PASSWORD=tu_password_oracle

# Cadena de conexión
# Formatos soportados:
# - host:puerto/servicio (ej: localhost:1521/XE)
# - IP:puerto/servicio (ej: 192.168.1.100:1521/desa)
# - TNS completo (ej: (DESCRIPTION=(ADDRESS=...)))
CONNECTIONSTRING=localhost:1521/XE

# Número máximo de conexiones en el pool
POOL=10

# Ruta a las librerías de Oracle Instant Client
# Ejemplos comunes:
# Linux: /opt/oracle/instantclient_21_10
# Linux (usuario): /home/usuario/bin/instantclient_19_25
# macOS: /usr/local/instantclient_19_8
# Windows: C:\instantclient_21_10
LIB_ORA=/ruta/a/instantclient

# Configuración opcional para desarrollo
# DEBUG=oracle
# NODE_ENV=development
