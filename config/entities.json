            {
              "value": "ERROR",
              "label": "Error"
            },
            {
              "value": "WARN",
              "label": "Advertencia"
            },
            {
              "value": "INFO",
              "label": "Información"
            },
            {
              "value": "DEBUG",
              "label": "Debug"
            }
          ]
        },
        "MESSAGE": {
          "type": "CLOB",
          "required": true,
          "displayName": "Mensaje",
          "description": "Mensaje del log",
          "searchable": true
        },
        "MODULE": {
          "type": "VARCHAR2",
          "length": 50,
          "required": true,
          "displayName": "Módulo",
          "description": "Módulo que generó el log",
          "searchable": true
        },
        "USER_ID": {
          "type": "NUMBER",
          "required": false,
          "displayName": "ID Usuario",
          "description": "ID del usuario relacionado"
        },
        "IP_ADDRESS": {
          "type": "VARCHAR2",
          "length": 45,
          "required": false,
          "displayName": "IP",
          "description": "Dirección IP del cliente"
        },
        "USER_AGENT": {
          "type": "VARCHAR2",
          "length": 500,
          "required": false,
          "displayName": "User Agent",
          "description": "User Agent del cliente"
        },
        "REQUEST_DATA": {
          "type": "CLOB",
          "required": false,
          "displayName": "Datos Request",
          "description": "Datos de la petición"
        },
        "RESPONSE_STATUS": {
          "type": "NUMBER",
          "required": false,
          "displayName": "Status Response",
          "description": "Código de estado de la respuesta"
        },
        "EXECUTION_TIME_MS": {
          "type": "NUMBER",
          "required": false,
          "displayName": "Tiempo Ejecución",
          "description": "Tiempo de ejecución en milisegundos"
        },
        "CREATED_AT": {
          "type": "TIMESTAMP",
          "required": false,
          "readonly": true,
          "displayName": "Fecha",
          "description": "Fecha y hora del log"
        },
        "CREATED_DATE": {
          "type": "DATE",
          "required": false,
          "readonly": true,
          "displayName": "Fecha Creación",
          "description": "Fecha de creación"
        }
      },
      "operations": {
        "create": true,
        "read": true,
        "update": false,
        "delete": false,
        "search": true,
        "paginate": true
      },
      "filters": {
        "errors": {
          "field": "LOG_LEVEL",
          "operator": "=",
          "value": "ERROR",
          "displayName": "Solo errores"
        },
        "warnings": {
          "field": "LOG_LEVEL",
          "operator": "IN",
          "value": [
            "ERROR",
            "WARN"
          ],
          "displayName": "Errores y advertencias"
        },
        "today": {
          "field": "CREATED_DATE",
          "operator": ">=",
          "value": "TRUNC(SYSDATE)",
          "displayName": "Hoy"
        }
      },
      "validations": {
        "LOG_LEVEL": {
          "required": true,
          "allowedValues": [
            "ERROR",
            "WARN",
            "INFO",
            "DEBUG"
          ],
          "message": "El nivel debe ser ERROR, WARN, INFO o DEBUG"
        },
        "MESSAGE": {
          "required": true,
          "message": "El mensaje es requerido"
        },
        "MODULE": {
          "required": true,
          "maxLength": 50,
          "message": "El módulo es requerido y no puede exceder 50 caracteres"
        }
      }
    },
